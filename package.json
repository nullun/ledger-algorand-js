{
  "name": "@algorandfoundation/ledger-algorand-js",
  "version": "0.0.2",
  "description": "Node API for the Algorand App (Ledger Nano S/X/S+)",
  "keywords": [
    "Algorand Foundation",
    "Ledger",
    "Typescript",
    "Javascript",
    "Algorand"
  ],
  "homepage": "https://github.com/algorandfoundation/ledger-algorand-js",
  "bugs": {
    "url": "https://github.com/algorandfoundation/ledger-algorand-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/algorandfoundation/ledger-algorand-js.git"
  },
  "license": "Apache-2.0",
  "author": "Algorand Foundation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "package-lock.json"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "format": "FORCE_COLOR=1 prettier --write . && sort-package-json",
    "format:check": "FORCE_COLOR=1 prettier --check . && sort-package-json -c",
    "lint": "eslint . --ext .ts",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --fix --ext .ts",
    "prepublishOnly": "npm run build",
    "semantic-release": "npm run semantic-release",
    "test": "npx vitest --run",
    "test:coverage": "npx vitest --run --coverage"
  },
  "dependencies": {
    "@ledgerhq/hw-transport": "^6.31.4",
    "@zondax/ledger-js": "^1.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^22.17.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.0.9",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "core-js": "^3.41.0",
    "crypto-js": "4.2.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.5.3",
    "secp256k1": "^5.0.1",
    "semantic-release": "^24.2.9",
    "sort-package-json": "^2.15.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  }
}
